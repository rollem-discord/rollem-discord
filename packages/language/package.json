    "node-cache": "^5.1.0",
    "npm": "^6.3.0",
    "nyc": "^15.0.1",
    "pegjs": "0.10.0",
    "pegjs-loader": "^0.5.6",
    "pg": "^8.6.0",
    "reflect-metadata": "^0.1.13",
    "ts-loader": "^9.5.1",
