    "applicationinsights": "^2.9.1",
    "chai": "^3.5.0",
    "chance": "^1.1.5",
    "del": "^3.0.0",
    "dotenv": "^9.0.1",
    "dotenv-cli": "^4.0.0",
    "gulp": "^4.0.2",
    "gulp-ext-replace": "^0.3.0",
    "gulp-pegjs": "^0.2.0",
    "gulp-sourcemaps": "^2.6.5",
